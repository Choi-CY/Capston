<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <padding android:bottom="3dp" android:left="5dp" android:right="5dp" android:top="3dp" />
            <gradient android:angle="270" android:endColor="#FFB2F5" android:startColor="#FFD6FF" />
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <padding android:bottom="3dp" android:left="5dp" android:right="5dp" android:top="3dp" />
            <solid android:color="#A566FF" />
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape>
    </item>
</selector>